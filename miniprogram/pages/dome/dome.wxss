.content {
  width: 100%;
  height: 100vh;
  /* height: 100%; */
  background: rgb(241, 242, 247);
}

.aa {
  margin: auto;
  margin-top: 5%;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  /* box-shadow: 0px 2px 3px 3px #777777; */
}

.image {
  width: 100%;
  height: 50vw;
  left: 0; 
  right: 0; 
}

.swipimg {
  width: 100%;  
  height: 100%;
  overflow: hidden;
}

.inside {
  width: 50%;
  height: 25vh;
  display: flex;
  margin-top: 3%;
  justify-content: center;
  align-items: center;
}

.left {
  position: relative;
  height: 40vw;
  width: 80%;
  margin-left: 8%;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 2px 2px 2px 2px #cccbcb;
}

/* .a {
  width: 1px;
  height: 60%;
  margin-left: 10%;
  background-color: rgb(196, 193, 193);
} */

.right {
  position: relative;
  height: 40vw;
  width: 80%;
  margin-left: -8%;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: 2px 2px 2px 2px #cccbcb;
}

.imageView {
  width: 70%;
  height: 70%;
  display: flex;
  margin: auto;
}

.text {
  font-size: 30rpx;
  color: rgb(0, 0, 0);
  display: flex;
  margin-top: 8%;
  justify-content: center;
  align-items: center;
}

