.content {
  width: 100%;
  height: 20%;
  margin: auto;
  margin-top: -150%;
  z-index: 10;
}
.textColor {
  color: rgb(41, 45, 48);
}
.words {
  width: 100%;
  text-align: center;
}

.btn {
  display: flex;
  margin-top: 105%;
  justify-content: center;
  align-items: center;
}

.btn button{
  width: 70%;
  height: 70rpx;
  font-size: 35rpx;
  line-height: 70rpx;
  color: aliceblue;
  background-color: rgb(85, 169, 218);
  border-radius: 100rpx;
  opacity: 1;
}

.text {
  display: flex;
  width: 100%;
  margin: 30rpx 0 0 0;
}

.text text{
  font-size: 35rpx;
  color: rgb(2, 2, 2);
  margin: auto;
}