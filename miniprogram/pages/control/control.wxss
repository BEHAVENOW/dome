.body {
  width: 100%;
  height: 100vh;
  background-color: rgb(241, 242, 247);
}

.head {
  display: flex;
  width: 100%;
  height: 20vh;
}

.data {
  flex: 1;
  margin-bottom: 5%;
  margin-left: 2.5%;
}

.dataData {
  height: 40%;
}

.wrap {
  flex: 1;
  width: 100%;
  height: 25vh;
}

/* 滑动块部分 */
.tab {
  float: left;
  width: 33.3333%;
  text-align: center;
  padding: 10rpx 0;
}
 
.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
  margin-top: 5%;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid rgb(77, 172, 209);
  color: rgb(77, 172, 209);
}
 
.swiper {
  width: 100%;
  height: 600rpx;
}
 
.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 20rpx 0;
}

/* 用电量css */
.content{
  height: 100%;
  width: 100%;
  padding: 30rpx;
  font-size: 24rpx;
  box-sizing: border-box;
}
.scroll{
  box-sizing: border-box;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.scroll-view{
  display: flex;
  box-sizing: border-box;
}
.scroll-view-item{
  padding: 0rpx 20rpx;
  border-radius: 20rpx;
  color: #A7A9A9;
  white-space: nowrap;
  margin-right: 10rpx;
}
.active{
  background: #44BBEE;
  color: #fff;
}
.mychart{
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
}
#mychart-dom-bar{
  font-size: 14px;
}
/* 用电量css */

/* 表格开始 */
.table {
  margin-top: 50rpx;
  border: 0px solid rgb(0, 0, 0);
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.list {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
  flex: 1;
  justify-content: center;
  background-color: rgb(241, 242, 247);
  font-size: 20rpx;
  color: rgb(0, 0, 0);
  display: flex;
  height: 2rem;
  align-items: center;
  border: 1px solid rgb(0, 0, 0);
}
.bg-w{
  background: snow;
}
.bg-g{
  background-color: rgb(241, 242, 247);
}
.th {
  flex: 1;
  justify-content: center;
  background-color: rgb(241, 242, 247);
  font-size: 20rpx;
  color: rgb(0, 0, 0);
  display: flex;
  height: 2rem;
  align-items: center;
  border: 1px solid rgb(0, 0, 0);
  border-bottom: 0;
}
/* 表格结束 */








